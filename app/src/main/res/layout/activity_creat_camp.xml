<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre del mundo -->
        <EditText
            android:id="@+id/editWorldName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_del_mundo"
            android:inputType="text"
            android:minHeight="48dp"
            android:autofillHints="name" />

        <!-- Ambientación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ambientacion" />
        <Spinner
            android:id="@+id/spinnerSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Tono narrativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tono_narrativo" />
        <Spinner
            android:id="@+id/spinnerTone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Sistema de poder -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sistema_de_poder" />
        <Spinner
            android:id="@+id/spinnerPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Razas o facciones -->
        <EditText
            android:id="@+id/editDominantRaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/razas_dominantes"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Conflicto principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/conflicto_principal" />
        <Spinner
            android:id="@+id/spinnerConflict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />

        <!-- Lugares clave -->
        <EditText
            android:id="@+id/editKeyLocations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lugares_clave"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Personajes importantes -->
        <EditText
            android:id="@+id/editKeyCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/personajes_importantes"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Ganchos narrativos -->
        <EditText
            android:id="@+id/editHooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ganchos_narrativos"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Objetivo del grupo -->
        <EditText
            android:id="@+id/editObjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/objetivo_jugadores"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Lore del mundo -->
        <EditText
            android:id="@+id/editWorldLore"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="@string/historia_del_mundo"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minHeight="48dp" />

        <!-- Botón enviar -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crear_campaña"
            android:minHeight="48dp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/responseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_placeholder"
            android:paddingTop="16dp" />
    </LinearLayout>
</ScrollView>
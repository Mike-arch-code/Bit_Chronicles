<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <include
            layout="@layout/navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/buttonImportarImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/import_image"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editCharacterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/character_name_hint"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alignment_label"
            android:layout_marginTop="12dp" />

        <RadioGroup
            android:id="@+id/radioGroupAlignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioLegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alignment_legal"
                android:contentDescription="Alineaci贸n Legal" />

            <RadioButton
                android:id="@+id/radioNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alignment_neutral"
                android:contentDescription="Alineaci贸n Neutral" />

            <RadioButton
                android:id="@+id/radioChaotic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alignment_chaotic"
                android:contentDescription="Alineaci贸n Ca贸tica" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupMoral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moral_good"
                android:contentDescription="Moral Bueno" />

            <RadioButton
                android:id="@+id/radioMoralNeutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moral_neutral"
                android:contentDescription="Moral Neutral" />

            <RadioButton
                android:id="@+id/radioEvil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moral_evil"
                android:contentDescription="Moral Malvado" />
        </RadioGroup>

        <EditText
            android:id="@+id/editPersonalityTraits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/personality_traits_hint"
            android:inputType="textMultiLine"
            android:autofillHints="username"
            android:minHeight="48dp"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/abilities_hint"
            android:inputType="textMultiLine"
            android:autofillHints="username"
            android:minHeight="48dp"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editMotivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/motivation_hint"
            android:inputType="textMultiLine"
            android:autofillHints="username"
            android:minHeight="48dp"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/sendCharacterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="@string/create_character_button"
            android:textColor="#FFFFFF"
            android:minHeight="48dp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/responseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_character_response"
            android:padding="12dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>

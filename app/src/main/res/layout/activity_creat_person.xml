<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del personaje -->
        <Button
            android:id="@+id/buttonImportarImg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/roundedbutton"
            android:text="Importar imagen" />

        <EditText
            android:id="@+id/editCharacterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del personaje"
            android:layout_marginBottom="8dp" />

        <!-- Raza -->
        <EditText
            android:id="@+id/editRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza"
            android:layout_marginBottom="8dp" />

        <!-- Clase -->
        <EditText
            android:id="@+id/editClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clase (guerrero, mago, pícaro...)"
            android:layout_marginBottom="8dp" />

        <!-- Trasfondo -->
        <EditText
            android:id="@+id/editBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trasfondo (ermitaño, soldado, etc.)"
            android:layout_marginBottom="8dp" />

        <!-- Postura -->
        <EditText
            android:id="@+id/editAlignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Postura (Neutral,Caotico,Bueno,Malo...)"
            android:layout_marginBottom="8dp" />

        <!-- Rasgos de personalidad -->
        <EditText
            android:id="@+id/editPersonalityTraits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rasgos de personalidad"
            android:minLines="2"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <!-- Habilidades especiales -->
        <EditText
            android:id="@+id/editAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Habilidades, conjuros o talentos"
            android:minLines="2"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="8dp" />

        <!-- Objetivo o motivación -->
        <EditText
            android:id="@+id/editMotivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Motivación o meta del personaje"
            android:minLines="2"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Botón de enviar -->
        <Button
            android:id="@+id/sendCharacterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Crear Personaje"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="8dp" />

        <!-- Texto de respuesta -->
        <TextView
            android:id="@+id/responseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí aparecerá la ficha del personaje..."
            android:layout_marginTop="24dp"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>

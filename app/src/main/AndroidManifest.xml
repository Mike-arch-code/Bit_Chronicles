<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bit_Chronicles"
        tools:targetApi="31">
        <activity
            android:name=".viewmodel.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Bit_Chronicles">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewmodel.LoginActivity"/>
        <activity android:name=".viewmodel.HomeActivity"/>
        <activity android:name=".viewmodel.CharacterActivity"/>
        <activity android:name=".viewmodel.CampaignActivity"/>
        <activity android:name=".viewmodel.activity_create_campaign"/>
        <activity android:name=".viewmodel.activity_create_character"/>
        <activity android:name=".viewmodel.CampaignListActivity"/>
        <activity android:name=".viewmodel.CampaignInfoActivity"/>
        <activity android:name=".viewmodel.MapActivity"/>
    </application>

</manifest>